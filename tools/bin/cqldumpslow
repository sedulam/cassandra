# Ensure Python 3.6+ is available and execute cqldumpslow.py

if python3 -c 'import sys; exit(sys.version_info < (3,6))' 2>/dev/null; then
    exec python3 "$(dirname "$(realpath "$0")")/cqldumpslow.py" "$@"
fi

echo "Python 3.6+ is required but not found." >&2
exit 1
